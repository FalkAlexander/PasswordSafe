<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="WelcomePage" parent="AdwBin">
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="LockedHeaderBar"/>
        </child>
        <child>
          <object class="AdwStatusPage" id="_status_page">
            <property name="title" translatable="yes" comments="The umbrella sentence of the application on the first start screen">Secure Secrets</property>
            <property name="description" translatable="yes" comments="The subtitle of the umbrella sentence in the first start screen. This is a sentence which gives the user a starting point what he can do if he opens the application for the first time.">Create or import a new Keepass safe</property>
            <style>
              <class name="icon-dropshadow"/>
            </style>
            <child>
              <object class="GtkButton">
                <property name="label" translatable="yes">_New Safe</property>
                <property name="use_underline">True</property>
                <property name="action_name">win.new_database</property>
                <property name="halign">center</property>
                <property name="can_shrink">True</property>
                <style>
                  <class name="pill"/>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
