<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="UnlockDatabase" parent="AdwBin">
    <child>
      <object class="AdwStatusPage" id="status_page">
        <property name="icon_name">org.gnome.PasswordSafe</property>
        <property name="title" translatable="yes">Unlock Safe</property>
        <property name="description" translatable="yes">Enter password, and optionally a keyfile.</property>
        <property name="child">
          <object class="AdwClamp">
            <property name="maximum_size">250</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkBox">
                    <property name="halign">center</property>
                    <property name="width_request">250</property>
                    <child>
                      <object class="GtkPasswordEntry" id="password_entry">
                        <property name="hexpand">True</property>
                        <property name="show-peek-icon">True</property>
                        <property name="placeholder_text">Password</property>
                        <signal name="activate" handler="_on_password_entry_activate" swapped="no"/>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="unlock_button">
                        <property name="tooltip_text" translatable="yes">Unlock</property>
                        <signal name="clicked" handler="_on_unlock_button_clicked" swapped="no"/>
                        <child>
                          <object class="GtkStack" id="spinner_stack">
                            <child>
                              <object class="GtkStackPage">
                                <property name="name">image</property>
                                <property name="child">
                                  <object class="GtkImage">
                                    <property name="icon_name">changes-allow-symbolic</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkStackPage">
                                <property name="name">spinner</property>
                                <property name="child">
                                  <object class="GtkSpinner" id="spinner"/>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                    <style>
                      <class name="linked"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">6</property>
                    <property name="halign">center</property>
                    <property name="width_request">250</property>
                    <child>
                      <object class="GtkButton" id="keyfile_button">
                        <signal name="clicked" handler="_on_keyfile_button_clicked" swapped="no"/>
                        <property name="hexpand">True</property>
                        <child>
                          <object class="GtkStack" id="keyfile_stack">
                            <child>
                              <object class="GtkStackPage">
                                <property name="name">label</property>
                                <property name="child">
                                  <object class="GtkLabel" id="keyfile_label">
                                    <property name="label">_Select Keyfile</property>
                                    <property name="use_underline">True</property>
                                    <property name="ellipsize">start</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkStackPage">
                                <property name="name">spinner</property>
                                <property name="child">
                                  <object class="GtkSpinner" id="keyfile_spinner"/>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <style>
                          <class name="text-button"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="clear_button">
                        <property name="visible">False</property>
                        <property name="icon_name">edit-delete-symbolic</property>
                        <property name="action_name">clear-keyfile</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
