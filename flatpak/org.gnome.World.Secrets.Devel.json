{
    "id": "org.gnome.World.Secrets.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "tags" : [
        "devel",
        "development",
        "nightly"
    ],
    "command" : "secrets",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup" : [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules" : [
        "python3-pykeepass.json",
        "python3-pyotp.json",
        "python3-pytest.json",
        "python3-validators.json",
        "python3-zxcvbn.json",
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dvapi=false",
                "-Dtests=false",
                "-Dexamples=false"
           ],
           "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch": "wip/alice/split-views"
                }
           ],
           "modules": [
                {
                    "name": "appstream",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dstemming=false",
                        "-Dgir=false",
                        "-Ddocs=false"
                    ],
                    "cleanup": [
                        "/bin/*",
                        "/etc/*",
                        "/share/metainfo"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/ximion/appstream.git",
                            "commit": "e4a7daefca9dcd600eea895332b8ba598cacd694"
                        }
                    ]
                },
                {
                    "name": "libsass",
                    "buildsystem": "meson",
                    "cleanup": [
                        "*"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/lazka/libsass.git",
                            "commit": "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                        }
                    ]
                },
                {
                    "name": "sassc",
                    "buildsystem": "meson",
                    "cleanup": [
                        "*"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/lazka/sassc.git",
                            "commit": "82803377c33247265d779af034eceb5949e78354"
                        }
                    ]
                }
            ]
        },
        {
            "name" : "secrets",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "../"
                }
            ]
        }
    ]
}
