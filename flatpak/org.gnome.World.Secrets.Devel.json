{
    "id": "org.gnome.World.Secrets.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "tags": [
        "devel",
        "development",
        "nightly"
    ],
    "command": "secrets",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=pcsc",
        "--socket=wayland"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "/share/doc",
        "/share/pkgconfig"
    ],
    "modules": [
        "libusb.json",
        "python3-pykeepass.json",
        "python3-pyotp.json",
        "python3-pytest.json",
        "python3-validators.json",
        "python3-zxcvbn.json",
        "python3-python-yubico.json",
        "python3-pykcs11.json",
        {
            "name": "secrets",
            "buildsystem": "meson",
            "builddir": true,
            "run-tests": true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}